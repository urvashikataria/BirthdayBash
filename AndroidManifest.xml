        <activity
            android:name=".Birthday"
            android:label="@string/title_activity_birthday" >
        </activity>
        <activity
            android:name=".SaveMyBirthday"
            android:label="@string/title_activity_save_my_birthday" >
        </activity>
        <activity
            android:name=".SaveABirthday"
            android:label="@string/title_activity_save_abirthday" >
        </activity>
        <activity
            android:name=".SavedDays"
            android:label="@string/title_activity_saved_days" >
